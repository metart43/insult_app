<h1>Login</h1>
<div class="error">
  <%= flash["notice"] %>
</div>
<%= form_tag '/login' do%>
  <%= label :username, "Username" %>
  <%= text_field_tag :username %>
  <%= label :password, "Password" %>
  <%= password_field_tag :password %>
  <%= submit_tag "Login" %>
<% end %>

<p>Or, create an account:</p>
<%= link_to "Sign up", new_user_path %>
