<h3>You are creating an insult for: <%= @group.name %></h3>
<%= form_for @insult do |f|%>
<%= f.label :content %>
<%= f.text_field :content %>
<%= f.label :victim_ids %>
<%= f.collection_select(:victim_ids, @group.users, :id, :name, {:prompt => false}, {:multiple => true}) %>
<%= f.hidden_field :group_id, value: @group.id %>
<%= f.submit %>
<% end %>
