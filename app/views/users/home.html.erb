<h3>Sidebar</h3>

<div class="dropdown">
  <button class="dropbtn">Your groups</button>
  <div class="dropdown-content">
    <% @groups.each do |g| %>
      <%= link_to g.name, group_path(g) %>
    <% end %>
  </div>
</div>
<br><br>
<%= link_to "Create a new group", new_group_path %>
<br><br>
<%= form_tag({controller: "groups", action: "search_results"}, method: "get") do %>
  <%= label_tag(:q, "Search for a group:") %><br>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>
<br><br>
<%= form_tag({controller: "users", action: "search_results"}, method: "get") do %>
  <%= label_tag(:q, "Search for a friend:") %><br>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<h3>Main page</h3>
<% @insults.each do |i| %>
  <h4><%= i.bully.name %> (<%= link_to "@#{i.bully.username}", user_path(i.bully) %>) in <%= i.group.name %> on <%= i.created_at.strftime("%b %d") %></h4>
  <p>insulted <%= i.victims.map(&:link_username).to_sentence.html_safe %>:</p>
  <p><%= i.content %></p>
<% end %>
